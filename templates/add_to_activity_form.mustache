{{!
  @template qbank_qtoactivity/add_to_activity_form

  Example context (json):
    {"modules":[
          {  "addtomoduleurl":"example.com",
             "moduledropdown":"<p>Dropdown html</p>",
             "returnurl":"example.com"
          }
      ]}
}}
{{^modules}}
    <div class="">
        <h5>{{#str}} noactivityfound, qbank_qtoactivity {{/str}}</h5>
        <a href="{{{returnurl}}}" class="btn btn-secondary">{{#str}} continue, core {{/str}}</a>
    </div>
{{/modules}}
{{#modules}}
    <div class="questiontoactivity-header mb-4">
        <h4>{{#str}} pluginname, qbank_qtoactivity {{/str}}</h4>
    </div>
    <form action="{{{addtomoduleurl}}}" method="post" id="addtomodule">
        {{{moduledropdown}}}
        <input type="submit" value="{{#str}} addtomodule, qbank_qtoactivity {{/str}}" class="btn btn-primary" name="addtomod" data-action="toggle" data-togglegroup="qbank"
               data-toggle="action" form="addtomodule">
        <a href="{{{returnurl}}}" class="btn btn-secondary">{{#str}} cancel_add_to_module, qbank_qtoactivity {{/str}}</a>
    </form>
{{/modules}}
